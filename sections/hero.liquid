{{ 'section-hero.css' | asset_url |  stylesheet_tag  }}

<style>
    #hero-{{ section.id }}{
        height: {{ section.settings.hero_height }}vh;
    }
</style>

<section id="hero-{{ section.id }}">
    {{ section.settings.bg_image | image_url: width: 3000 | image_tag: loading: 'lazy', sizes: sizes, widths: '550, 720, 990, 1100, 1500, 2200, 3000', alt: section.settings.bg_image.alt, class: 'hero-image' }}
    <div class="page-width center">
        <div class="hero-content">
            <div>
                {% if section.settings.subtitle != blank %}
                    <h2>{{ section.settings.subtitle }}</h2>
                {% endif %}
                {% if section.settings.title != blank %}
                    <h1>{{ section.settings.title }}</h1>
                {% endif %}
            </div>
            <div class="button-group">
                {% for block in section.blocks %}
                    {% if block.settings.button_link != blank and block.settings.button_style != blank %}
                        <a href="{{ block.settings.button_link }}" class="btn {{ block.settings.button_style }}">
                            {{ block.settings.button_text }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Hero",
        "class": "hero",
        "settings": [
            {
                "type": "header",
                "content": "Media"  
            },
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "range",
                "id": "hero_height",
                "label": "Hero Height",
                "default": 50,
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "vh"
            },
            {
                "type": "header",
                "content": "Content"  
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            }
        ],
        "blocks": [
            {
                "name": "Button",
                "type": "button",
                "limit": 4,
                "settings": [
                    {
                        "type": "text",
                        "id": "button_text",
                        "label": "Button Text"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button Link"
                    },
                    {
                        "type": "select",
                        "id": "button_style",
                        "label": "Button Style",
                        "options": [
                            {
                                "value": "primary",
                                "label": "Primary"
                            },
                            {
                                "value": "secondary",
                                "label": "Secondary"
                            }
                        ]
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Hero"
            }
        ]
    }
{% endschema %}
