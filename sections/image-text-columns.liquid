{{ 'section-image-text-columns.css' | asset_url |  stylesheet_tag  }}

<section id="image-and-text-columns-{{ section.id }}" class="image-and-text-columns">
    <div class="page-width">
        <div class="row">
            {% for block in section.blocks %}
                <div class="col-md-6">
                    <div class="column">
                        <h2>{{ block.settings.title }}</h2>
                        <p>{{ block.settings.description }}</p>
                        {% for collection in block.settings.collections %}
                            <a href="{{ collection.url }}">
                                {{ collection.title }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Image and Text Columns",
        "class": "image-and-text-columns",
        "blocks": [
            {
                "name": "Text Column",
                "type": "text_column",
                "limit": 2,
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Description"
                    },
                    {
                        "type": "collection_list",
                        "id": "collections",
                        "limit": 4,
                        "label": "Collections"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image and Text Columns"
            }
        ]
    }
{% endschema %}
